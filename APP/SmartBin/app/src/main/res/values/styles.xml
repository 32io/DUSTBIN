<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card styles -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="Theme.FuturisticApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/neon_blue</item>
    <item name="colorPrimaryVariant">@color/neon_blue_light</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorSecondary">@color/neon_green</item>
    <item name="colorSecondaryVariant">@color/neon_green_light</item>
    <item name="colorOnSecondary">@color/white</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:windowBackground">@color/background_dark</item>
    <item name="android:fontFamily">@font/orbitron</item>
    <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    <item name="extendedFloatingActionButtonStyle">@style/Widget.App.ExtendedFab</item>
    <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>



    <!-- Progress bar style -->
    <style name="CircularProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
        <item name="android:thickness">4dp</item>
    </style>

    <style name="TextAppearance.App.NeonText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/neon_blue</item>
        <item name="android:shadowColor">@color/neon_blue</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <style name="Widget.App.HolographicCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_dark</item>
        <item name="cardElevation">16dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/neon_blue</item>
        <item name="android:foreground">@drawable/holographic_overlay</item>
    </style>

    <style name="Widget.App.NeonButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/neon_button_background</item>
        <item name="android:textColor">@color/neon_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/neon_blue_light</item>
    </style>

    <style name="Widget.App.ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:alpha">0.95</item>
        <item name="elevation">8dp</item>
        <item name="backgroundTint">@color/neon_blue</item>
        <item name="rippleColor">@color/neon_blue_light</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/background_dark</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/neon_blue</item>
        <item name="android:textColor">@color/neon_blue</item>
        <item name="rippleColor">@color/neon_blue_light</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSurface">@color/background_dark</item>
    </style>

    <style name="CyberpunkNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">#1A1A1A</item>
        <item name="itemTextColor">#00F9FF</item>
        <item name="itemIconTint">#FF00FF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimary">#00F9FF</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FF00FF</item>
        <item name="android:textColor">#00F9FF</item>
    </style>

    <!-- Text styles -->
    <style name="ClockText" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">#00796B</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- State Details Text style -->
    <style name="StateDetailsText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#00796B</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Last Updated Text style -->
    <style name="LastUpdatedText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>