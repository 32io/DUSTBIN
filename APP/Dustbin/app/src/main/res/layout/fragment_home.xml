<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundGradient">

    <!-- Bin Image -->
    <ImageView
        android:id="@+id/bin_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_bin"
        android:contentDescription="Smart Bin Icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bin Fill Level Text -->
    <TextView
        android:id="@+id/bin_fill_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bin Fill Level: 50%"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bin_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Collection Status -->
    <TextView
        android:id="@+id/collection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collection Status: Not Needed"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bin_fill_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Real-Time Sensor Readings -->
    <TextView
        android:id="@+id/sensor_readings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Readings: N/A"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/collection_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Digital Clock -->
    <TextView
        android:id="@+id/digital_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/sensor_readings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
